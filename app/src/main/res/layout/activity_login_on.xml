<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginON_Activity">

    <TextView
        android:id="@+id/TxtRegister"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LogIn"
        android:fontFamily="@font/outfit_regular"
        android:textSize="32sp"
        android:textColor="@color/blueDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/UserRegisterEmailBoxTxt"
        android:inputType="textEmailAddress"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:hint="@string/prompt_email"
        android:autofillHints="Rendo"
        android:textAlignment="center"
        android:fontFamily="@font/outfit_regular"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/TxtRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_rectangle_fillwhiteapp"
        />
    <EditText
        android:id="@+id/UserRegisterPasswordBoxTxt"
        android:inputType="textPassword"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:hint="@string/prompt_password"
        android:autofillHints="Rendo"
        android:textAlignment="center"
        android:fontFamily="@font/outfit_regular"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/UserRegisterEmailBoxTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/TermsPhrase"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_rectangle_fillwhiteapp"
        />

    <TextView
        android:id="@+id/TermsPhrase"
        android:layout_width="175dp"
        android:layout_height="26dp"
        app:layout_constraintTop_toBottomOf="@id/UserRegisterPasswordBoxTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnregisterOFFLINE"
        android:text="@string/TermsPhrase"
        android:textSize="11sp"
        android:textAlignment="center"
        android:fontFamily="@font/outfit_regular"
        android:layout_marginTop="15dp"
        app:layout_constraintVertical_bias="0.2"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogInOFFLINE"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/outfit_regular"
        app:layout_constraintTop_toBottomOf="@id/TermsPhrase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btnrectanglebluedark"
        android:text="@string/LogIn"
        android:textColor="@color/white"
        android:textAllCaps="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>