<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Validation_Email_Activity">
    <TextView
        android:id="@+id/TxtValidation"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Validation"
        android:fontFamily="@font/outfit_regular"
        android:textSize="32sp"
        android:textColor="@color/blueDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/TxtVerificationEmail"
        android:layout_width="210dp"
        android:layout_height="38dp"
        android:fontFamily="@font/outfit_regular"
        android:text="We send a code to your email, check and enter it below."
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_marginTop="23dp"
        app:layout_constraintBottom_toTopOf="@id/UserCodeVerificationTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TxtValidation"
        app:layout_constraintVertical_bias="0.204" />

    <EditText
        android:id="@+id/UserCodeVerificationTxt"
        android:inputType="number"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:hint="@string/codeValidation"
        android:autofillHints="Rendo"
        android:textAlignment="center"
        android:fontFamily="@font/outfit_regular"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/TxtVerificationEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnValidationCode"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_rectangle_fillwhiteapp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnValidationCode"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/outfit_regular"
        app:layout_constraintTop_toBottomOf="@id/UserCodeVerificationTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btnrectanglebluedark"
        android:text="@string/Validation"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textAllCaps="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>